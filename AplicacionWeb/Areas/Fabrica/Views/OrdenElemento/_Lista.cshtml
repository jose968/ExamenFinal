@model IEnumerable<AplicacionWeb.Modelo.OrderItem>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OrderId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UnitPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th></th>
    </tr>


    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                <a href="#"
                   onClick="getModalContent('@Url.Action("Editar", new { area="Fabrica", id = item.Id })')"
                   data-toggle="modal"
                   data-target="#modal-container"
                   class="btn btn-success">
                    <span class="glyphicon glyphicon-edit"></span> Edit
                </a>

                <a href="#"
                   onClick="getModalContent('@Url.Action("Detalle", new { area="Fabrica", id = item.Id })')"
                   data-toggle="modal"
                   data-target="#modal-container"
                   class="btn btn-success">
                    <span class="glyphicon glyphicon-eye-open"></span> Details
                </a>

                <a href="#"
                   onClick="getModalContent('@Url.Action("Eliminar", new { area="Fabrica", id = item.Id })')"
                   data-toggle="modal"
                   data-target="#modal-container"
                   class="btn btn-danger">
                    <span class="glyphicon glyphicon-trash"></span> Delete
                </a>
            </td>
        </tr>
    }
</table>