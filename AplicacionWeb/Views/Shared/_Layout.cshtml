<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mi Aplicación HTML5</title>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/css")
</head>
<body>
    <header>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Mi Aplicacion", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <nav class="navbar-collapse collapse">
                    @if (Request.IsAuthenticated)
                    {
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Cliente", "Inicio", new { area = "Fabrica", Controller = "Cliente" })</li>
                        <li>@Html.ActionLink("Orden", "Inicio", new { area = "Fabrica", Controller = "Orden" })</li>
                        <li>@Html.ActionLink("OrdenElemento", "Inicio", new { area = "Fabrica", Controller = "OrdenElemento" })</li>
                        <li>@Html.ActionLink("Producto", "Inicio", new { area = "Fabrica", Controller = "Producto" })</li>
                        <li>@Html.ActionLink("Proveedor", "Inicio", new { area = "Fabrica", Controller = "Proveedor" })</li>
                    </ul>
                    }
                    @Html.Partial("_LogeoParcial")
                </nav>
            </div>
        </div>

    </header>
    <section class="container body-content">
        @RenderBody()
    </section>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
